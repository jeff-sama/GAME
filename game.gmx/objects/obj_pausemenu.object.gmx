//if up or down, then menu shifts up or down
if (obj_input.input_up_pressed){
    if (option_select &gt; 0){
        for (i = 0; i&lt;=3; i++){
            option_slot[i]++; //each option decreases its slot by one
        }
        option_select--; //option_select changes to that of the next
    }
}
else if(obj_input.input_down_pressed){
    if (option_select &lt; 3){
        for(i = 0; i&lt;=3; i++){
            option_slot[i]--; //each option increases its slot by one
        }
        option_select++; //option_select changes to that of the previous
    }
}

//Scale
for(i = 0; i&lt;=3; i++){
    option_scale[i] = power(2/3,abs(option_slot[i])); // x = (2/3)^|option_slot|
    if (option_slot[i] = 0) option_y[i] = 0;
    else if (option_slot[i] = 1) option_y[i] = 60;
    else if (option_slot[i] = 2) option_y[i] = 60+40;
    else if (option_slot[i] = 3) option_y[i] = 60+40+(2/3)*40;
    else if (option_slot[i] = -1) option_y[i] = -60;
    else if (option_slot[i] = -2) option_y[i] = -(60+40);
    else if (option_slot[i] = -3) option_y[i] = -(60+40+(2/3)*40);
    //Scale Transition
